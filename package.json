{
  "name": "lob-openapi",
  "version": "2.0.0",
  "description": "Tooling for OpenAPI spec for Lob API",
  "private": true,
  "main": "",
  "config": {
    "--dynamic": "false",
    "bundlefile": "Lob-API-bundled.yml",
    "postmanfile": "Lob-API-postman.json",
    "specfile": "Lob-API-public.yml",
    "servers": {
      "sandbox": "http://0.0.0.0:8443/v1",
      "staging": "https://api.lob-staging.com/v1",
      "production": "https://api.lob.com/v1"
    },
    "goaliemappings": {
      "av": {
        "slackchannel": "#av-api-alerts",
        "resources": {
          "usverifications": "tests/us_verifications_test.js",
          "usziplookups": "tests/zip_lookups_test.js"
        }
      },
      "billing": {
        "slackchannel": "#billing-errors",
        "resources": {}
      },
      "pmapi": {
        "slackchannel": "#eng-api-errors",
        "resources": {
          "addresses": "tests/addresses_test.js",
          "letters": "tests/letters_test.js",
          "postcards": "tests/postcards_test.js",
          "templates": "tests/template*_test.js",
          "certificates": "tests/certificates_test.js"
        }
      }
    }
  },
  "scripts": {
    "bundle": "openapi bundle -o dist/$npm_package_config_bundlefile $npm_package_config_specfile",
    "clean": "rm -rf dist",
    "lint": "spectral lint $npm_package_config_specfile",
    "mock": "prism mock $npm_package_config_--dynamic $npm_package_config_specfile",
    "postinstall": "husky install",
    "postman": "npm run bundle && openapi2postmanv2 --pretty --spec dist/$npm_package_config_bundlefile --output dist/$npm_package_config_postmanfile",
    "pretty": "prettier --write .",
    "pretty:check": "prettier --check .",
    "proxy": "prism proxy --errors $npm_package_config_specfile https://api.lob.com/v1",
    "redoc": "redoc-cli bundle $npm_package_config_specfile -t actions/redoc/template.hbs --options.theme.sidebar.backgroundColor: \"#f7f9fa\" -o docs/index.html",
    "test": "multi-tape './tests/**_test.js' | tap-spec",
    "pergoalie": "node actions/contract_tests/goalieruns.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lob/lob-openapi.git"
  },
  "keywords": [
    "OpenAPI",
    "Prism"
  ],
  "author": "engineering@lob.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lob/lob-openapi/issues"
  },
  "homepage": "https://github.com/lob/lob-openapi#readme",
  "devDependencies": {
    "@redocly/openapi-cli": "^1.0.0-beta.44",
    "@stoplight/prism-cli": "^4.1.2",
    "@stoplight/spectral": "^5.9.0",
    "btoa": "^1.2.1",
    "husky": "^5.0.9",
    "multi-tape": "^1.6.1",
    "openapi-to-postmanv2": "^2.0.0",
    "prettier": "^2.2.1",
    "redoc-cli": "^0.11.2",
    "tap-spec": "^5.0.0",
    "tape": "^5.1.1",
    "tape-catch": "^1.0.6",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14.16.0",
    "npm": ">=7.9.0"
  }
}
