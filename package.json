{
  "name": "lob-openapi",
  "version": "2.0.0",
  "description": "Tooling for OpenAPI spec for Lob API",
  "private": true,
  "main": "",
  "config": {
    "--dynamic": "false",
    "specfile": "Lob-API-public.yml",
    "servers": {
      "sandbox": "http://0.0.0.0:8443/v1",
      "staging": "https://api.lob-staging.com/v1",
      "production": "https://api.lob.com/v1"
    },
    "goalie-mappings": {
      "av-goalie": {
        "slack-channel": "#av-api-alerts",
        "resources": {
          "us_verifications": "./tests/us_verifications_test.js",
          "us_zip_lookups": "./tests/zip_lookups_test.js"
        }
      },
      "billing-goalie": {
        "slack-channel": "#billing-errors",
        "resources": {}
      },
      "pmapi-goalie": {
        "slack-channel": "#eng-api-errors",
        "resources": {
          "addresses": "./tests/addresses_test.js",
          "letters": "./tests/letters_test.js",
          "postcards": "./tests/postcards_test.js",
          "templates": "./tests/templates_test.js",
          "certificates": "./tests/certificates_test.js"
        }
      }
    }
  },
  "scripts": {
    "lint": "spectral lint $npm_package_config_specfile",
    "mock": "prism mock $npm_package_config_--dynamic $npm_package_config_specfile",
    "postinstall": "husky install",
    "pretty": "prettier --write .",
    "proxy": "prism proxy --errors $npm_package_config_specfile https://api.lob.com/v1",
    "test": "tape './tests/**_test.js' | tap-spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lob/lob-openapi.git"
  },
  "keywords": [
    "OpenAPI",
    "Prism"
  ],
  "author": "engineering@lob.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lob/lob-openapi/issues"
  },
  "homepage": "https://github.com/lob/lob-openapi#readme",
  "devDependencies": {
    "@stoplight/prism-cli": "^4.1.2",
    "@stoplight/spectral": "^5.9.0",
    "btoa": "^1.2.1",
    "husky": "^5.0.9",
    "openapi-to-postmanv2": "^2.0.0",
    "prettier": "^2.2.1",
    "tap-spec": "^5.0.0",
    "tape": "^5.1.1",
    "tape-catch": "^1.0.6",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=14.16.0",
    "npm": ">=7.9.0"
  }
}
